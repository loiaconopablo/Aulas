<h1>Registracion de Profesor</h1>
  <% form_for(@user, '/users/create') do |f| %> <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <input type="hidden" name="type" value="profesor" />
  <br/>
  <%= f.submit "Crear", :class => "btn btn-primary" %>
<% end %>